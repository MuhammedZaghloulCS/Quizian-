<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/purple_700"
    android:orientation="vertical"
    tools:context=".UI.fragments.UniqueCode">
    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:alpha="0"
        android:fontFamily="@font/allan_bold"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="55sp"
        tools:alpha="1" />
    <!-- TODO: Update blank fragment layout -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/copy_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cardCornerRadius="16dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="130dp"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/clipboard_copy"
            />
        <TextView
            android:id="@+id/uniqueCode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="45sp"
            android:gravity="center"
            android:fontFamily="@font/comfortaa_bold"
            android:padding="5dp"
            tools:text="50adf5545"/>
    </com.google.android.material.card.MaterialCardView>

    <Button
        android:id="@+id/go_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lt_lt_go_home"
        android:textSize="20sp"
        android:layout_marginTop="100dp"
        android:background="@android:color/transparent"
        />

</LinearLayout>